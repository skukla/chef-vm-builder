# CLI
function own() {
  USER="<%= @user %>"
  GROUP="<%= @user %>"
  printf "\nUpdating permissions..."
  clear
  www
  sudo chown -R ${USER}:${GROUP} var/ pub/ generated/ app/etc
  sudo chmod -R 777 var/ pub/ app/etc/ generated/
  sleep 1
  printf "done.\n"
}
export -f own

