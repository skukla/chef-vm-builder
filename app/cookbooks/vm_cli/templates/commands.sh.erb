function import-backups() {
  USER="vagrant"
  IMPORTED=false
  www
  if [ ! -d "/${USER}/backups" ]; then
    print "\nLooks like there isn't a folder called 'backups' inside of your app directory.  Please create it and try again.\n"
    return
  fi
  if [ ! -d "./var/backups" ]; then
    print "\nImport failed because there isn't a backups directory in the web root at var/backups.\n"
    return
  fi
  for FILENAME in /${USER}/backups/*; do
    if [ "${FILENAME}" = "/vagrant/backups/*" ]; then
      printf "\nThere are no backup files to import in your app/backups directory. Exiting...\n"
      sleep 3
      return
    else
      if [ ! -e ./var/backups/$(basename "${FILENAME}") ]; then
        printf "Importing ${FILENAME}..."
        cp "${FILENAME}" ./var/backups/$(basename "${FILENAME}")
        printf "done.\n"
      else
        IMPORTED=true
      fi
    fi
  done
  if [ $IMPORTED = true ]; then
    printf "\nAll files are ready to import on the VM.\n\n"
  fi
  chown ${USER}:${USER} -R ./var/*
  chmod -R 777 ./var/*
}
export -f import-backups

function restore() {
  START=`date +%s`
  USER="<%= @user %>"
  GROUP="<%= @user %>"
  DB_USER="<%= @db_user %>"
  DB_PASSWORD="<%= @db_password %>"
  DB_NAME="<%= @db_name %>"
  www
  if [ -z "$(ls -A ./var/backups)" ]; then
    printf "\nThere are no backup files in the VM. Use Samba to copy them into place.\n"
    sleep 3
    clear
    return
  fi 
  if [[ $# -eq 0 ]] ; then
    list-backups
    printf "\n"
    printf "Codebase File: "
    read CODEBASE_FILENAME
    printf "Database File: "
    read DATABASE_FILENAME
    printf "Media File: "
    read MEDIA_FILENAME
  else
    CODEBASE_FILENAME=$1
    DATABASE_FILENAME=$2
    MEDIA_FILENAME=$3
  fi
  if [ -d "../backups" ] && [ -d "./var/backups" ]; then 
    printf "\nCopying backups..."
    sudo cp ./var/backups/* ../backups/
    sleep 1
    printf "done. \n"; 
  fi
  if [ ! -f ../backups/${CODEBASE_FILENAME} ]; then 
    printf "\nOh snap, the codebase file you specified doesn't exist. Please try again. Exiting..."
    sleep 3
    clear
    return
  fi
  if [ ! -f ../backups/${DATABASE_FILENAME} ]; then 
    printf "\nOh snap, the database file you specified doesn't exist. Please try again. Exiting..."
    sleep 3
    clear
    return
  fi
  if [ ! -f ../backups/${MEDIA_FILENAME} ]; then 
    printf "\nOh snap, the media file you specified doesn't exist. Please try again. Exiting..."
    sleep 3
    clear
    return
  fi

  disable-cron

  printf "\nClearing the web root..."
  sudo rm -rf ./generated/
  sudo rm -rf {..?,.[!.],}*
  printf "done. \n"

  printf "\nRestoring the codebase..."
  tar -xf ../backups/${CODEBASE_FILENAME}
  printf "\n"
  composer install
  printf "done. \n"

  printf "\nRestoring media..."
  tar -xf ../backups/${MEDIA_FILENAME}
  printf "done. \n"

  printf "\nRestoring the database (this might take a bit)..."
  mysql -u ${DB_USER} -p${DB_PASSWORD} ${DB_NAME} < ../backups/${DATABASE_FILENAME}
  printf "done.\n"
  
  db-upgrade
  
  printf "\nReplacing backups..." 
  if [ ! -d "./var/backups" ]; then 
    mkdir -p "./var/backups"
  fi
  cp ../backups/* ./var/backups/
  rm -rf ../backups/*
  printf "done. \n"

  printf "\nUpdating permissions..."
  sudo chown -R ${USER}:${GROUP} ./*
  sudo chmod -R 777 var/ pub/ app/etc/ generated/
  printf "done.\n"

  printf "\nCleaning up generated and cache folders..."
  sudo rm -rf ./generated/ var/cache/*
  printf "done. \n"

  prod-mode
  ./bin/magento indexer:reindex
  ./bin/magento cache:clean
  enable-cron

  END=`date +%s`
  RUNTIME=$((${END}-${START}))
  MINUTES=$(( (${RUNTIME} % 3600) / 60 )); SECONDS=$(( (${RUNTIME} % 3600) % 60 ))
  printf "\nBackup restored in ${MINUTES} minutes, ${SECONDS} seconds.\n"
}
export -f restore