function prepare-backup() {
  DIRS=("<%= @backup_holding_area %>/app" "<%= @backup_holding_area %>/data-packs")

  for DIR in ${DIRS[@]}; do
    if [ ! -d $DIR ]; then
      sudo mkdir -p $DIR
      sudo chown <%= @user %>:<%= @user %> $DIR
    fi
  done
}
export -f prepare-backup

function collect-data-packs() {
  BACKUP_HOLDING_AREA="<%= @backup_holding_area %>"
  DATA_PACK_DIR="<%= @data_packs_dir %>"
  DATA_PACKS_HOLDING_AREA="${BACKUP_HOLDING_AREA}/data-packs"
  CONFIG_JSON_FILE="<%= @config_json_dir %>/config.json"

  if [ -d ${DATA_PACK_DIR} ]; then
    printf "\nCollecting data packs..."
    sudo cp -R ${DATA_PACK_DIR}/* ${DATA_PACKS_HOLDING_AREA}
    printf "done.\n"
  fi

  if [ -f ${CONFIG_JSON_FILE} ]; then
    printf "\nCollecting config.json..."
    sudo cp ${CONFIG_JSON_FILE} ${DATA_PACKS_HOLDING_AREA}
    printf "done.\n"
  fi

  sudo chown -R <%= @user %>:<%= @user %> ${BACKUP_HOLDING_AREA}/*
}
export -f collect-data-packs

function zip-data-packs() {
  BACKUP_HOLDING_AREA="<%= @backup_holding_area %>"
  DATA_PACKS_HOLDING_AREA="${BACKUP_HOLDING_AREA}/data-packs"
  BACKUP_DIR="<%= @web_root%>/<%= @backup_dir %>"

  printf "\nZipping data packs..."
  cd ${DATA_PACKS_HOLDING_AREA}
  
  zip -rq ${BACKUP_DIR}/data-packs.zip *
  printf "done.\n"
}
export -f zip-data-packs

function collect-app() {
  BACKUP_HOLDING_AREA="<%= @backup_holding_area %>"
  APP_HOLDING_AREA="${BACKUP_HOLDING_AREA}/app"
  BACKUP_DIR="<%= @web_root%>/<%= @backup_dir %>"

  if [ -d ${BACKUP_DIR} ] && [ "$(ls -A ${BACKUP_DIR})" ]; then
    printf "\nCollecting backups..."
    cp ${BACKUP_DIR}/* ${APP_HOLDING_AREA}
    printf "done.\n"
  fi
  rm -rf ${BACKUP_DIR}/*
}
export -f collect-app

function zip-app() {
  APP_HOLDING_AREA="<%= @backup_holding_area %>/app"
  BACKUP_DIR="<%= @web_root%>/<%= @backup_dir %>"

  printf "\nZipping app backup..."
  cd ${APP_HOLDING_AREA}
  zip -rq ${BACKUP_DIR}/app.zip *
  printf "done.\n"
}
export -f zip-app

function zip-project() {
  BACKUP_DIR="<%= @web_root%>/<%= @backup_dir %>"
  
  printf "\nZipping project..."
  cd ${BACKUP_DIR}
  zip -rq ${BACKUP_DIR}/<%= @base_url %>.zip data-packs.zip app.zip
  printf "done.\n"
}
export -f zip-project

function clean-up-backup() {
  BACKUP_HOLDING_AREA=<%= @backup_holding_area %>
  BACKUP_DIR="<%= @web_root%>/<%= @backup_dir %>"
  sudo rm -rf ${BACKUP_HOLDING_AREA}/*
  sudo rm -rf ${BACKUP_DIR}/data-packs.zip ${BACKUP_DIR}/app.zip
}
export -f clean-up-backup

function export-backup() {
  USER=<%= @user %>
  EXPORT_DIR="/${USER}/backup"
  BACKUP_DIR="<%= @web_root%>/<%= @backup_dir %>"

  if [ -d "${BACKUP_DIR}" ]; then
    printf "\nExporting all backups to the VM app/vm/backup directory..."
    if [ ! -d "${EXPORT_DIR}" ]; then
      mkdir -p ${EXPORT_DIR}
    fi
    cp -R ${BACKUP_DIR}/* ${EXPORT_DIR}
    printf "done. \n"
  fi
}
export -f export-backup

function remove-backup() {
  BACKUP_DIR="<%= @web_root%>/<%= @backup_dir %>"
  
  www
  if [ -d "${BACKUP_DIR}" ]; then
    printf "\nRemoving all backups on the VM (Local backups will not be affected)..."
    sleep 1
    sudo rm -rf ${BACKUP_DIR}/*
    printf "done. \n"
  fi
}
export -f remove-backup

function backup-project() {
  prepare-backup
  sanitize-config-json
  collect-data-packs
  backup-app
  collect-app
  zip-data-packs
  zip-app
  zip-project
  clean-up-backup
  export-backup
  remove-backup
}
export -f backup-project

