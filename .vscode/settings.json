{
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.tabSize": 2,
  "explorer.compactFolders": false,
  "terminal.integrated.cwd": "./app/vm",
  "csv-edit.initiallyFixedRowsTop": 1,
  "files.exclude": {
    "**/.gitignore": true,
    "**/.vscode": true,
    "**/node_modules": true,
    "**/package*.json": true
  },
  "json.schemas": [
    {
      "fileMatch": ["config/config*.json"],
      "url": "./app/core/schemas/config.schema.json"
    }
  ]
}
